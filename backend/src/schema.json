{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Person",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "The person's full name"
      },
      "age": {
        "type": "integer",
        "minimum": 0,
        "description": "The person's age in years"
      },
      "email": {
        "type": "string",
        "format": "email",
        "description": "The person's email address"
      },
      "isEmployed": {
        "type": "boolean",
        "description": "Indicates if the person is employed"
      }
    },
    "required": ["name", "age"]
  }