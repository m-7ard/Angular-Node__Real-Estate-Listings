{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ES2020",
        "baseUrl": "./src",
        "paths": {
            "@schemas/*": ["schemas/*"]
        },
        "noImplicitAny": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "rootDirs": ["./src"],
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "babel.config.js", "static", "types/**/*", "schemas/**/*", "tests/**/*"]
}
